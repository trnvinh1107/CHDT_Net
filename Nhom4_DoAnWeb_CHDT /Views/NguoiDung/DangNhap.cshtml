@model Nhom4_DoAnWeb_CHDT.Models.tblTAIKHOAN

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đăng nhập</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     Tài khoản:
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.userID, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên tài khoản" } })
            @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
        </div>
    </div>

    Mật khẩu:
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>
    <span style="color:red">@ViewBag.ThongBao</span>
    <div class="form-group">
        <div class="col-md-10">
            <br>
            <input type="submit" value="Đăng nhập" class="btn btn-primary" style="margin-left:10%"/>
        </div>
    </div>
    <a href="@Url.Action("doi_mat_khau", "NguoiDung")">Quên mật khẩu</a>
    <hr style="width:30%; margin:20px 0"/>
    <div class="form-group">
        <div class="col-md-10">
            <a href="@Url.Action("DangKy", "NguoiDung")" class="btn btn-success" style="margin-left:8%">Tạo tài khoản mới</a>
        </div>
    </div>
</div>
}
