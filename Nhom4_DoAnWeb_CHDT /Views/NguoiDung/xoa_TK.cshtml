@model Nhom4_DoAnWeb_CHDT.Models.tblTAIKHOAN

@{
    ViewBag.Title = "Xóa Tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Tài khoản</h2>

<h3>Chắc chắn muốn xóa Tài khoản này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tài khoản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userID)
        </dd>
        <dt>
            Mật khẩu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Xóa" class="btn btn-default" style="margin:10px 20px" />
    }
</div>

<div>
    @Html.ActionLink("Quay lại", "danh_sach", "NguoiDung")
</div>
